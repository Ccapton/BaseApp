<?xml version="1.0" encoding="utf-8"?>
<layout>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:clickable="true"
    android:focusable="true"
    android:focusableInTouchMode="true"
    android:gravity="center_horizontal"
    android:background="@android:color/white"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:background="@mipmap/title_bg"
        android:layout_width="match_parent"
        android:layout_height="50dp">

        <Button
            android:id="@+id/closeLoginBtn"
            android:background="@mipmap/close"
            android:layout_marginTop="13dp"
            android:layout_marginLeft="13dp"
            android:layout_width="24dp"
            android:layout_height="24dp" />

        <TextView
            android:text="注册"
            android:textColor="@color/loginTextSignin"
            android:layout_alignParentRight="true"
            android:layout_width="80dp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:id="@+id/signInTv"
            android:background="@color/loginTitleBar" />

        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/closeLoginBtn"
            android:layout_alignBottom="@+id/closeLoginBtn"
            android:layout_centerHorizontal="true"
            android:text="登录"
            android:textColor="@color/loginTextTitle"
            android:textSize="18sp" />
    </RelativeLayout>

    <TextView
        android:background="@color/loginTitleDivider"
        android:layout_width="match_parent"
        android:layout_height="1dp"  />

    <TextView
        android:text="手机"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="@dimen/activity_vertical_margin"
        android:inputType="phone"
        android:layout_margin="18dp" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:paddingLeft="20dp"
        android:paddingBottom="4dp"
        android:id="@+id/user"
        android:background="@android:color/white" />

    <TextView
        android:text="TextView"
        android:layout_width="match_parent"
        android:layout_height="2px"
        android:background="@color/loginTitleDivider"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp" />

    <TextView
        android:text="密码"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="@dimen/activity_vertical_margin"
        android:layout_margin="18dp" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="20dp"
        android:paddingBottom="4dp"
        android:ems="10"
        android:id="@+id/psw"
        android:background="@android:color/white"
        android:inputType="textPassword" />

    <TextView
        android:text="TextView"
        android:layout_width="match_parent"
        android:layout_height="2px"
        android:background="@color/loginTitleDivider"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp" />

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/forgotPswLayout"
        android:visibility="gone">

        <LinearLayout
            android:gravity="center"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:text="验证码"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/activity_vertical_margin"
                android:layout_margin="18dp" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="20dp"
                android:paddingBottom="4dp"
                android:ems="10"
                android:id="@+id/comfirmCodeForgot"
                android:background="@android:color/white"
                android:inputType="number"
                android:layout_weight="1"
                android:hint="输入验证码" />

            <TextView
                android:gravity="center"
                android:text="获取验证码"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:id="@+id/comfirmCodeTvforgot"
                android:layout_marginRight="20dp" />
        </LinearLayout>

        <TextView
            android:text="TextView"
            android:layout_width="match_parent"
            android:layout_height="2px"
            android:background="@color/loginTitleDivider"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp" />

    </LinearLayout>

    <Button
        android:text="登录"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:id="@+id/loginBtn"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_marginTop="30dp"
        android:background="@drawable/select_login_btn"
        android:textColor="@android:color/white"
        android:textSize="@dimen/titleTextSize"
        android:layout_marginBottom="@dimen/iconMargin"
        />

    <TextView
        android:text="忘记密码"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:id="@+id/forgotPsw"
        android:gravity="center"
        android:textColor="@color/loginTips" />

    <LinearLayout
        android:id="@+id/thirdLoginLayout"
        android:orientation="vertical"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:gravity="center"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="30dp">

            <TextView
                android:layout_marginLeft="18dp"
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:layout_weight="1"
                android:background="@color/loginTitleDivider" />

            <TextView
                android:text="第三方登录"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/loginTips" />

            <TextView
                android:layout_marginRight="18sp"
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:layout_weight="1"
                android:background="@color/loginTitleDivider" />
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginTop="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_margin="10dp"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@mipmap/wechat"
                android:id="@+id/wechatLogin"
                />
            <ImageView
                android:layout_margin="10dp"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@mipmap/weibo"
                android:id="@+id/weiboLogin" />



        </LinearLayout>

    </LinearLayout>


</LinearLayout>
</layout>